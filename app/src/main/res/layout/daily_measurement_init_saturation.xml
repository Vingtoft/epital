<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_measurement_init_saturation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="431dp"
    android:layout_marginTop="101dp"
    android:background="#0ff">

    <TextView
        android:id="@+id/daily_measurement_init_sautration_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Vi gør klar til måling af puls"
        android:textColor="#ffffff"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/daily_measurement_init_bluetooth_enabled_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily_measurement_init_sautration_header"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Bluetooth er tændt!"
        android:textColor="#000000"
        android:textSize="35dp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:layout_marginLeft="430dp"
        android:text="Benyt måling"
        android:textSize="40dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/repeat"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="91dp"
        android:layout_marginLeft="100dp"
        android:text="Lav ny måling"
        android:textSize="40dp"
        android:visibility="gone" />

</RelativeLayout>

