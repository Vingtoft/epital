<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_measurement_content_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="431dp"
    android:layout_marginTop="101dp"
    android:background="#0ff">


    <SeekBar
        android:id="@+id/temperatureSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="70"
        android:minWidth="500dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Måling af temperatur"
        android:textSize="45dp"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text="Angiv på slideren nedenfor din temperatur"
        android:layout_marginTop="145dp"/>

    <TextView
        android:id="@+id/temperaturResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textColor="#000"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"/>

    <Button
        android:id="@+id/temperatureContinue"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Fortsæt"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"/>


</RelativeLayout>